{
  "schema": "sr.probe.config.v0_1",
  "after_tick_probes": [
    {"type": "file_exists", "path": "snapshots/*/sr_snapshot_*_manifest.json"},
    {"type": "file_exists", "path": "receipts/sr_status_dump_v0_3.json"},
    {"type": "json_field", "path": "receipts/sr_status_dump_v0_3.json", "field": "verdict", "expect": "penitential_rite", "allow_any": true}
  ],
  "on_failure": "record_offender_only"
}
